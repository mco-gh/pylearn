set -x

DIR=../content/en/lessons

for i in *.ipynb
do
    lesson="${i%.*}"
    weight=`echo $lesson| cut -d'_' -f1`
    name=`echo $lesson| cut -d'_' -f2`
    cat >"$DIR/$weight $name/_index.md" <<!
---
title: "$weight $name"
linkTitle: "$weight $name"
weight: "$weight"
---
!
    jupyter nbconvert --to html "$i" --stdout >>"$DIR/$weight $name/_index.md"
done
